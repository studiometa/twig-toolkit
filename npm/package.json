{
  "name": "@studiometa/twig-toolkit",
  "version": "1.0.0",
  "description": "A set of useful extension and components for Twig.",
  "main": "dist/es/Extension.js",
  "types": "dist/es/Extension.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "templates/"
  ],
  "workspaces": [
    "."
  ],
  "exports": {
    ".": {
      "import": "./dist/es/Extension.js",
      "require": "./dist/cjs/Extension.js"
    },
    "./": {
      "import": "./dist/es/",
      "require": "./dist/cjs/"
    }
  },
  "scripts": {
    "lint": "eslint src/",
    "build": "rm -r dist && npm run build:es && npm run build:cjs && npm run build:templates",
    "build:es": "tsc --outDir dist/es",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:templates": "rsync -avh ../templates/ ./templates/",
    "test": "jest",
    "prepublishOnly": "npm run test && npm run build",
    "postinstall": "rsync -avh node_modules/twing/dist/types/ node_modules/twing/dist/cjs/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studiometa/twig-toolkit.git"
  },
  "keywords": [
    "twig",
    "extension",
    "js",
    "twing"
  ],
  "author": "Studio Meta <agence@studiometa.fr> (https://www.studiometa.fr/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/studiometa/twig-toolkit/issues"
  },
  "homepage": "https://github.com/studiometa/twig-toolkit#readme",
  "dependencies": {
    "lodash": "^4.17.21",
    "twig-lexer": "^0.7.2",
    "twing": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@studiometa/eslint-config": "^2.1.3",
    "@studiometa/prettier-config": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.20.5",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "esbuild": "^0.9.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1"
  }
}
