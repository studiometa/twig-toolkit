{
  "name": "@studiometa/twig-toolkit",
  "version": "2.0.0",
  "description": "A set of useful extension and components for Twig.",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/cjs/Extension.js",
  "module": "dist/esm/Extension.js",
  "types": "dist/cjs/Extension.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "templates/"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/Extension.js",
      "require": "./dist/cjs/Extension.js"
    }
  },
  "scripts": {
    "build": "rm -rf dist && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --outDir dist/esm",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studiometa/twig-toolkit.git"
  },
  "keywords": [
    "twig",
    "extension",
    "js",
    "studiometa",
    "twig-toolkit"
  ],
  "author": "Studio Meta <agence@studiometa.fr> (https://www.studiometa.fr/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/studiometa/twig-toolkit/issues"
  },
  "homepage": "https://github.com/studiometa/twig-toolkit#readme",
  "dependencies": {
    "param-case": "^3.0.4"
  },
  "devDependencies": {
    "@studiometa/eslint-config": "^3.0.0-beta.0",
    "@studiometa/prettier-config": "^2.1.1",
    "@types/node": "^12.20.40",
    "@types/twig": "^1.12.8",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "c8": "^7.11.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "prettier": "^2.5.1",
    "twig": "^1.15.4",
    "typescript": "^4.5.4",
    "vitest": "^0.0.131"
  }
}
