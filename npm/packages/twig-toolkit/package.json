{
  "name": "@studiometa/twig-toolkit",
  "version": "1.0.0",
  "description": "A set of useful extension and components for Twig.",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/es/Extension.js",
  "types": "dist/es/Extension.d.ts",
  "type": "module",
  "files": [
    "dist/",
    "templates/"
  ],
  "exports": {
    ".": {
      "import": "./dist/es/Extension.js",
      "require": "./dist/cjs/Extension.js"
    },
    "./": {
      "import": "./dist/es/",
      "require": "./dist/cjs/"
    }
  },
  "scripts": {
    "build": "rm -rf dist && npm run build:es && npm run build:cjs",
    "build:es": "tsc --outDir dist/es",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "test": "jest",
    "prepublishOnly": "npm run test && npm run build",
    "postinstall": "if [ -d 'node_modules/twing' ]; then rsync -ahP node_modules/twing/dist/types/ node_modules/twing/dist/cjs/; fi;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/studiometa/twig-toolkit.git"
  },
  "keywords": [
    "twig",
    "extension",
    "js",
    "twing"
  ],
  "author": "Studio Meta <agence@studiometa.fr> (https://www.studiometa.fr/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/studiometa/twig-toolkit/issues"
  },
  "homepage": "https://github.com/studiometa/twig-toolkit#readme",
  "dependencies": {
    "lodash": "^4.17.21",
    "twig-lexer": "^0.7.2",
    "twing": "^5.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^12.20.5",
    "esbuild": "^0.9.0",
    "esbuild-jest": "^0.5.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
